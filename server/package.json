{
  "name": "trustortrap",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently -n API,WEB -c green,cyan \"PORT=5050 nodemon --watch server --ext js,json --signal SIGTERM --exec \\\"node --enable-source-maps server/src/server.js\\\"\" \"npm --prefix client run dev\"",
    "api": "PORT=5050 node server/src/server.js",
    "web": "npm --prefix client run dev",
    "start": "node server/src/server.js",
    "lint": "npm --prefix client run lint",
    "test": "echo \"No root tests yet\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0"
  }
}
