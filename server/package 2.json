{
  "name": "trustortrap-api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "server.js",
  "engines": { "node": ">=18" },
  "scripts": {
    "dev": "nodemon --watch . --ext js,json --signal SIGTERM server.js",
    "start": "node server.js",
    "build": "echo \"(API) nothing to build\""
  },
  "nodemonConfig": {
    "watch": ["."],
    "ignore": ["node_modules", ".git"],
    "ext": "js json",
    "execMap": { "js": "node --enable-source-maps" }
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}